{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],

  "parserOptions": {
    "parser": "@babel/eslint-parser"
  },

  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSameLine": false,
        "singleQuote": false,
        "semi": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "printWidth": 80,
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "auto",
        "useTabs": false
      }
    ]
  }
}
